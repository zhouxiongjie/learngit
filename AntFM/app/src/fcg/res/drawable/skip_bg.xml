<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 角度 -->
    <corners android:radius="18dp"/>
    <padding
        android:bottom="8dp"
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        />
    <!-- 填充色 -->
    <solid android:color="#99333333"/>
    <!-- 描边 设置线宽及颜色 -->
    <stroke android:color="#99333333"
        android:width="0dp"/>
</shape>
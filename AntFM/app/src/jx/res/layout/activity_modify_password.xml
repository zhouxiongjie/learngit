<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="修改密码"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="旧密码"
                android:textColor="#282828"
                android:textSize="@dimen/font_size_30px" />

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="请输入当前密码"
                android:textColorHint="#B2B2B2"
                android:textSize="@dimen/font_size_28px"
                android:layout_alignParentEnd="true"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_bg" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divideColorOne" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="新密码"
                android:textColor="#282828"
                android:textSize="@dimen/font_size_30px" />

                <EditText
                    android:id="@+id/newPassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="6-20位数字或字母"
                    android:textColorHint="#B2B2B2"
                    android:textSize="@dimen/font_size_28px"
                    android:layout_alignParentEnd="true"
                    android:inputType="textPassword"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_bg" />




        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divideColorOne" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="确认新密码"
                android:textColor="#282828"
                android:textSize="@dimen/font_size_30px" />

            <EditText
                android:id="@+id/repeatPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:hint="再次输入新密码"
                android:textColorHint="#B2B2B2"
                android:textSize="@dimen/font_size_28px"
                android:layout_alignParentEnd="true"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_bg" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divideColorOne" />


        <TextView
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/attention_button_bg"

            android:gravity="center"
            android:padding="10dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码"
            android:textColor="?attr/themeColor"
            android:textSize="@dimen/font_size_28px"
            android:layout_marginTop="15dp"/>


    </LinearLayout>

</LinearLayout>
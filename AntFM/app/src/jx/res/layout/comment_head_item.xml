			<!--</LinearLayout>-->

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/praiseLayout"
				android:layout_toRightOf="@+id/head"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/account"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/font_size_26px"
					android:textColor="@color/textColorTwo"
					android:textStyle="bold"
					tools:text="流动的忧郁"/>
				<TextView
					android:id="@+id/time"
					android:layout_width="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_height="wrap_content"
					android:textSize="@dimen/font_size_22px"
					android:textColor="#B2B2B2"
					android:text="2016-11-25 11:39:44"/>


			</LinearLayout>

		</RelativeLayout>

		<TextView
			android:id="@+id/comments"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:textSize="@dimen/font_size_28px"
			android:textColor="@color/textColorTwo"
			tools:text="哎呀，好精彩的视频哈 太好看了，我今天要通宵看"/>

		<TextView
			android:id="@+id/reply"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:textSize="@dimen/font_size_22px"
			android:textColor="@color/textColorTwo"
			android:layout_marginTop="10dp"
			android:text="5回复"
			android:background="@drawable/write_comment_bg"
			android:visibility="gone"/>


	</LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divideColorOne"/>

    <TextView
        android:id="@+id/replyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部回复"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_30px"
        android:textStyle="bold"
        android:padding="10dp"/>



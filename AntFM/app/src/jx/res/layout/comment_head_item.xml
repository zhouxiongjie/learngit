<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:orientation="vertical">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/head"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				app:actualImageScaleType="centerCrop"
				app:placeholderImage="@drawable/ic_user1"
				app:placeholderImageScaleType="centerCrop"
				app:failureImage="@drawable/ic_user1"
				app:failureImageScaleType="centerCrop"
				app:viewAspectRatio="1"
				app:roundAsCircle="true"
				app:roundingBorderWidth="0dp"
				app:roundingBorderColor="@color/white" />

			<TextView
				android:id="@+id/praiseSum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:drawableStart="@drawable/praise_selector"
				android:drawablePadding="5dp"
				android:padding="3dp"
				android:textColor="@color/praise_color_selector"
				android:textSize="@dimen/font_size_28px"
				tools:text="25"/>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/excellent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/excellentLogo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/excellentLogo"
            android:text="@string/excellent_recommend"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_36px"
            android:textStyle="bold"
            android:visibility="visible"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            fresco:roundedCornerRadius="0dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/video_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:viewAspectRatio="1.778" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.0"
            android:lines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_34px"
            android:layout_alignStart="@+id/logo"
            android:layout_alignTop="@+id/logo"
            android:padding="10dp"
            tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

        <ImageView
            android:id="@+id/playIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/video_play_icon"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_duration_text_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_22px"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"

            tools:text="04:30" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/top_text_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/top"
            android:textColor="@color/textColorFour"
            android:textSize="@dimen/font_size_18px"
            android:visibility="gone"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/organizationLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/head_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@drawable/head_placeholder"
            fresco:failureImageScaleType="centerCrop"
            fresco:viewAspectRatio="1"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="0dp"
            fresco:roundingBorderColor="@color/white" />


        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/commentNum"
            android:layout_toEndOf="@+id/organizationLogo"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_30px"
            android:textStyle="bold"
            tools:text="浏阳电台" />

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/publishTime"
            android:ellipsize="end"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_comment"
            android:drawablePadding="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="#737373"
            android:textSize="@dimen/font_size_24px"
            tools:text="52" />

        <TextView
            android:id="@+id/publishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#737373"
            android:textSize="@dimen/font_size_24px"
            tools:text="5小时前" />


    </RelativeLayout>

</LinearLayout>




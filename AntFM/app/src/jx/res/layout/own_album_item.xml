<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        fresco:roundedCornerRadius="4dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/article_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:viewAspectRatio="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.0"
            android:lines="1"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_32px"
            tools:text="李银河说爱情" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.0"
            android:lines="2"
            android:textColor="@color/textColorNine"
            android:textSize="@dimen/font_size_28px"
            tools:text="资讯文章内容中只资讯文章内容" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="&#xe611;"
                android:textColor="@color/main_bottom_text_selector"
                android:textSize="@dimen/font_size_30px"/>
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorThree"
                android:textSize="@dimen/font_size_24px"
                tools:text="21集" />

            <TextView
                android:id="@+id/organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColorThree"
                android:textSize="@dimen/font_size_24px"
                tools:text="浏阳广播电台" />




        </LinearLayout>


    </LinearLayout>


</RelativeLayout>




<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/live"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世间有爱"
            android:textSize="@dimen/font_size_30px"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#42352F"
            />

        <TextView
            android:id="@+id/anchorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世间有爱"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_28px"
            android:textColor="#524C4A"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    
    
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_28px"
        android:textColor="#524C4A"
        android:text="9:30-12:30"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/time"
        android:background="@drawable/live_button_bg"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:paddingRight="6dp"
        android:paddingBottom="1dp"
        android:text="直播"
        android:textColor="#F4E5EA"
        android:textSize="@dimen/font_size_28px" />




</RelativeLayout>

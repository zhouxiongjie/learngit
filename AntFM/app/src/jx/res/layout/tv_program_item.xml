<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世间有爱"
            android:textStyle="bold"
            android:lines="2"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/login_text_color_selector"
            />

        <TextView
            android:id="@+id/anchorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="世间有爱"
            android:textColor="#524C4A"
            android:textSize="@dimen/font_size_28px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_22px"
            android:textColor="#A1A1A1"
            android:layout_marginTop="10dp"
            android:text="9:30-12:30"/>

    </LinearLayout>


    <TextView
        android:id="@+id/live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/live_button_bg"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:paddingRight="6dp"
        android:paddingBottom="1dp"
        android:text="直播"
        android:textColor="#F4E5EA"
        android:textSize="@dimen/font_size_28px" />




</RelativeLayout>

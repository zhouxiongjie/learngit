<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        fresco:moreImg="@drawable/ic_more"
        fresco:canBack="true" />


    <com.aliyun.vodplayerview.widget.AliyunVodPlayerView
        android:id="@+id/aliyunVodPlayerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/channelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="CCTV-5体育频道"
            android:textColor="#111111"
            android:textSize="@dimen/font_size_28px" />

        <!--<com.shuangling.software.customview.FontIconView-->
            <!--android:id="@+id/collect"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginEnd="20dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toStartOf="@+id/selectChannel"-->
            <!--android:text="&#xe62e;"-->
            <!--android:textColor="@color/textColorEleven"-->
            <!--android:textSize="@dimen/font_size_40px" />-->

        <ImageView
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/selectChannel"
            android:background="@drawable/collect_selector" />


        <LinearLayout
            android:id="@+id/selectChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选台"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px" />

            <com.shuangling.software.customview.FontIconView
                android:id="@+id/orientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="&#xe634;"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divideColorTwo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/divideColorOne">

                <RadioButton
                    android:id="@+id/yesterday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="昨天"
                    android:gravity="center"
                    android:padding="15dp"
                    android:button="@null"
                    android:textColor="@color/radio_button_text_selector"
                    android:background="@drawable/radio_button_bg_selector" />

                <RadioButton
                    android:id="@+id/today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="今天"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="15dp"
                    android:button="@null"
                    android:textColor="@color/radio_button_text_selector"
                    android:background="@drawable/radio_button_bg_selector" />

                <RadioButton
                    android:id="@+id/tomorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="明天"
                    android:gravity="center"
                    android:padding="15dp"
                    android:button="@null"
                    android:textColor="@color/radio_button_text_selector"
                    android:background="@drawable/radio_button_bg_selector" />


            </RadioGroup>

            <ListView
                android:id="@+id/programList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:divider="@color/divideColorTwo"
                android:dividerHeight="1dp"
                android:padding="10dp"
                android:scrollbars="none">

            </ListView>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/selectChannelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:visibility="gone">

            <ListView
                android:id="@+id/categoryList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/divideColorOne"
                android:divider="@null"
                android:scrollbars="none">

            </ListView>


            <ExpandableListView
                android:id="@+id/contentList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:childDivider="@color/divideColorTwo"
                android:divider="@null"
                android:groupIndicator="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none">

            </ExpandableListView>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>



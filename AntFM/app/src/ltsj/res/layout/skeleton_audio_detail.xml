<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/logo"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/light_skeleton_color" />

    <TextView
        android:id="@+id/audioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="marquee"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.0"
        android:singleLine="true"
        android:textColor="@color/transparent"
        android:textSize="@dimen/font_size_34px"
        android:background="@color/light_skeleton_color"
        android:text="资讯文章内容中只有" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="00:00"
            android:textColor="@color/transparent"
            android:background="@color/light_skeleton_color"
            android:textSize="@dimen/font_size_26px"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="04:30"
            android:textColor="@color/transparent"
            android:background="@color/light_skeleton_color"
            android:textSize="@dimen/font_size_26px"
            android:visibility="invisible"/>


        <View
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/endTime"
            android:layout_toEndOf="@+id/currentTime"
            android:background="@color/light_skeleton_color" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <!--<ImageButton-->
        <!--android:id="@+id/play"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/ic_play" />-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/play"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_centerInParent="true"
            fresco:placeholderImage="@color/light_skeleton_color"
            fresco:viewAspectRatio="1"
            fresco:roundAsCircle="true"/>

        <View
            android:id="@+id/previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/play"
            android:background="@color/light_skeleton_color"/>

        <!--<ImageButton-->
        <!--android:id="@+id/next"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_toRightOf="@+id/play"-->
        <!--android:background="@drawable/ic_fast_forward" />-->
        <View
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/play"
            android:background="@color/light_skeleton_color" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/light_skeleton_color"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/timer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/light_skeleton_color" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/rate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@color/light_skeleton_color" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/light_skeleton_color"
        android:layout_marginTop="20dp"/>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="10dp"-->
    <!--android:text="所属专辑"-->
    <!--android:textColor="@color/black"-->
    <!--android:textSize="@dimen/font_size_36px" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <View
            android:id="@+id/albumLogo"
            android:layout_width="@dimen/article_right_image_width"
            android:layout_height="@dimen/article_right_image_width"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/light_skeleton_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/albumLogo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/albumTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.0"
                android:maxLines="2"
                android:textColor="@color/transparent"
                android:textSize="@dimen/font_size_34px"
                tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）"
                android:background="@color/light_skeleton_color"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->


                    <!--</LinearLayout>-->

                    <!--<com.facebook.drawee.view.SimpleDraweeView-->
                    <!--android:id="@+id/head"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--fresco:actualImageScaleType="centerCrop"-->
                    <!--fresco:placeholderImage="@drawable/head_placeholder"-->
                    <!--fresco:placeholderImageScaleType="centerCrop"-->
                    <!--fresco:roundAsCircle="true"-->
                    <!--fresco:viewAspectRatio="1" />-->


                    <TextView
                        android:id="@+id/anchorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王大锤王大锤"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/font_size_26px"
                        android:background="@color/light_skeleton_color"/>

                    <TextView
                        android:id="@+id/audioNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="王大锤王大锤"
                        android:textColor="@color/transparent"
                        android:textSize="@dimen/font_size_26px"
                        android:background="@color/light_skeleton_color"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/light_skeleton_color"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minWidth="60dp"
                    android:padding="8dp"
                    android:textColor="@color/transparent"
                    android:textSize="@dimen/font_size_24px"
                    tools:text="已订阅" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorTwo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="相关推荐"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_36px" />


    <com.shuangling.software.customview.MyRecyclerView
        android:id="@+id/recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorTwo" />


    <LinearLayout
        android:id="@+id/commentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="全部评论"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_36px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="(12)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_36px"
            android:textStyle="bold" />

    </LinearLayout>


    <com.shuangling.software.customview.MyListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.shuangling.software.customview.MyListView>


</LinearLayout>




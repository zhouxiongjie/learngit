<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 角度 -->
    <corners android:radius="15dp"/>
    <padding
        android:bottom="5dp"
        android:left="15dp"
        android:right="15dp"
        android:top="5dp"
        />
    <!-- 填充色 -->
    <solid android:color="@color/white"/>
    <!-- 描边 设置线宽及颜色 -->
    <stroke android:color="#E6E6E6"
        android:width="1dp"/>
</shape>
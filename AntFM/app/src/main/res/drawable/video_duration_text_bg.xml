<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 角度 -->
    <corners android:radius="8dp"/>
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        />
    <!-- 填充色 -->
    <solid android:color="#992C2C2C"/>
    <!-- 描边 设置线宽及颜色 -->
    <stroke android:color="#992C2C2C"
        android:width="0dp"/>
</shape>
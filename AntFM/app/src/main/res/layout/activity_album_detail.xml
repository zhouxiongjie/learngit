    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/logo"
                android:layout_width="@dimen/article_right_image_width"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/article_placeholder"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundedCornerRadius="4dp"
                fresco:viewAspectRatio="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/albumTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:lineSpacingMultiplier="1.0"
                    android:lines="2"
                    android:textColor="@color/textColorTwo"
                    android:textSize="@dimen/font_size_17sp"
                    android:textStyle="bold"
                    tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/head"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:placeholderImage="@drawable/head_placeholder"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"
                        fresco:viewAspectRatio="1" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/subscribe"
                        android:layout_toEndOf="@+id/head"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:lineSpacingMultiplier="1.0"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_28px"
                        tools:text="王大锤王大锤王大锤王大锤王大锤" />

                    <TextView
                        android:id="@+id/subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/subscribe_text_bg"
                        android:gravity="center"
                        android:minWidth="60dp"
                        android:minHeight="29dp"
                        android:textColor="@color/subscribe_text_selector"
                        android:textSize="@dimen/font_size_24px"
                        tools:text="已订阅" />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


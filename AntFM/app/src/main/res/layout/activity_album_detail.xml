<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical">


    <com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:canBack="true" />
    
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/article_right_image_width"
                    fresco:viewAspectRatio="1"
                    android:layout_height="wrap_content"
                    fresco:placeholderImage="@drawable/article_placeholder"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    fresco:roundedCornerRadius="4dp"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:actualImageScaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/logo"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/albumTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:lineSpacingMultiplier="1.0"
                        android:lines="2"
                        android:textColor="@color/textColorTwo"
                        android:textSize="@dimen/font_size_34px"
                        android:textStyle="bold"
                        tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/head"
                            android:layout_width="30dp"
                            fresco:viewAspectRatio="1"
                            fresco:roundAsCircle="true"
                            android:layout_height="wrap_content"
                            fresco:placeholderImage="@drawable/head_placeholder"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            fresco:placeholderImageScaleType="centerCrop"
                            fresco:actualImageScaleType="centerCrop" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lineSpacingExtra="5dp"
                            android:lineSpacingMultiplier="1.0"
                            android:layout_toEndOf="@+id/head"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_28px"
                            tools:text="王大锤"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/subscribe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="15dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/textColorFive"
                            android:textSize="@dimen/font_size_24px"
                            android:padding="8dp"
                            android:background="@drawable/subscribe_text_bg"
                            tools:text="已订阅" />


                    </RelativeLayout>


                </LinearLayout>



            </RelativeLayout>
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/divideColorOne"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/introduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:lineSpacingMultiplier="1.0"
                        android:lines="1"
                        android:textColor="@color/main_bottom_text_selector"
                        android:textSize="@dimen/font_size_34px"
                        android:textStyle="bold"
                        android:text="简介" />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/indicator1"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        fresco:roundedCornerRadius="1dp"
                        fresco:placeholderImage="@color/textColorOne"
                        android:layout_gravity="center_horizontal"
                        />
                    
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/program"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:lineSpacingMultiplier="1.0"
                        android:lines="1"
                        android:textColor="@color/main_bottom_text_selector"
                        android:textSize="@dimen/font_size_34px"
                        android:text="节目"
                        android:textStyle="bold"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/indicator2"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        fresco:roundedCornerRadius="1dp"
                        fresco:placeholderImage="@color/textColorOne"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/recommend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:lineSpacingMultiplier="1.0"
                        android:lines="1"
                        android:textColor="@color/main_bottom_text_selector"
                        android:textSize="@dimen/font_size_34px"
                        android:text="推荐"
                        android:textStyle="bold"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/indicator3"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        fresco:roundedCornerRadius="1dp"
                        fresco:placeholderImage="@color/textColorOne"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>
                




            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/divideColorTwo"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    <!--</ScrollView>-->







</LinearLayout>



        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:srlEnableAutoLoadMore="true"
        android:layout_below="@+id/activity_title">

        <!--<com.scwang.smartrefresh.layout.header.ClassicsHeader-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--fresco:srlAccentColor="@android:color/black"-->
            <!--fresco:srlClassicsSpinnerStyle="Translate"-->
            <!--fresco:srlDrawableProgress="@drawable/smart_refresh_progress_logo"-->
            <!--fresco:srlDrawableProgressSize="20dp"-->
            <!--fresco:srlPrimaryColor="@color/white" />-->


        <ListView

            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:background="@color/white"/>

        <!--<com.scwang.smartrefresh.layout.footer.ClassicsFooter-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--fresco:srlAccentColor="@android:color/black"-->
            <!--fresco:srlClassicsSpinnerStyle="Translate"-->
            <!--fresco:srlDrawableProgress="@drawable/smart_refresh_progress_logo"-->
            <!--fresco:srlDrawableProgressSize="20dp"-->
            <!--fresco:srlPrimaryColor="@color/white" />-->


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/noDataImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/no_data" />

        <TextView
            android:id="@+id/noDataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="暂无数据" />

    </LinearLayout>



    <com.shuangling.software.customview.SideBar
        android:id="@+id/sidebar"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"/>


    <TextView
        android:id="@+id/letters"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/video_duration_text_bg"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:text="A"
        android:visibility="gone" />

</RelativeLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!--<com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activtyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:canBack="true"
        app:moreText=""
        app:titleText="反馈记录" />-->

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/activtyTitle"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_30px"
        android:textStyle="bold"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabIndicatorColor="?attr/themeColor"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#212121"
        app:tabTextColor="#212121"
        app:tabTextAppearance="@style/TabTextStyle"
         />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabPageIndicator"
        android:layout_above="@+id/actionLayout"/>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">


        <com.aliyun.vodplayerview.widget.AliyunVodPlayerView
            android:id="@+id/aliyunVodPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/article_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />

        <FrameLayout
            android:id="@+id/host_leave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cc000000"
            android:visibility="gone">


            <FrameLayout

                android:layout_width="190dp"
                android:layout_height="92dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:background="#5D6069"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="15dp"
                    android:text="主播暂不在播哦~"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

            </FrameLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/host_header"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="45.5dp"
                app:roundAsCircle="true"
                app:roundingBorderColor="#ffffff"
                app:roundingBorderWidth="1dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/article_placeholder"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:viewAspectRatio="1" />


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="预约" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live_type_bg">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="直播"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_22px" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/live_type_bg">

                    <com.aliyun.apsara.alivclittlevideo.view.video.FontIconView
                        android:id="@+id/fiv_close"
                        layout_gravity="left|top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="&#xe61e;"
                        android:textColor="#ffffff"
                        android:textSize="11sp" />

                    <TextView

                        android:id="@+id/audit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:text="37.3万人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_22px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/adverts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_container" />

    <RelativeLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/player_container">

        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?attr/themeColor"
            android:padding="10dp"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_30px"
            android:visibility="gone" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabPageIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/attention"
            android:textSize="@dimen/font_size_32px"

            android:textStyle="normal"
            app:tabIndicatorColor="?attr/themeColor"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="2dp"
            app:tabMode="scrollable"
            app:tabPaddingEnd="0dp"

            app:tabPaddingStart="0dp"
            app:tabSelectedTextColor="?attr/themeColor"
            app:tabTextColor="@color/black" />

        <!--app:tabTextAppearance="@style/TabTextStyle"-->
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_container"
        android:background="#F5F8FF" />


</LinearLayout>



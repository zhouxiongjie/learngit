        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_msg_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:transcriptMode="normal">

        </androidx.recyclerview.widget.RecyclerView>

        <ImageButton
            android:id="@+id/more_msg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chat_msg_list"
            android:layout_marginStart="10dp"
            android:background="@drawable/push_btn_more_msg"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/chatBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/inputbox_bg"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="点击消息框可回复观众哦"
                    android:textColor="#BFBFBF"
                    android:textSize="@dimen/font_size_30px" />



                <ImageButton
                    android:id="@+id/invite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/inputbox_bg"
                    android:padding="0dp"
                    android:src="@drawable/ic_invite"
                    android:visibility="gone" />


                <ImageButton
                    android:id="@+id/more"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/inputbox_bg"
                    android:padding="0dp"
                    android:src="@drawable/ic_more01" />

                <ImageButton
                    android:id="@+id/goods"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/inputbox_bg"
                    android:padding="0dp"
                    android:src="@drawable/ic_goods" />

                <ImageButton
                    android:id="@+id/gift"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/inputbox_bg"
                    android:padding="0dp"
                    android:src="@drawable/ic_gift" />


            </LinearLayout>

            <EditText
                android:id="@+id/chatInput"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_inputbox"
                android:hint="和粉丝聊两句呗!"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:padding="8dp"
                android:visibility="gone" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/showingGoods"
            android:layout_width="237.5dp"
            android:layout_height="101.5dp"
            android:background="@drawable/showing_goods_bg"
            android:layout_above="@+id/bottomLayout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="-10dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新品上市！快来抢~"
                android:background="@drawable/showing_goods_title_bg"
                android:textColor="#FEA91A"
                android:textSize="@dimen/font_size_20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="#40000000"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        app:actualImageScaleType="centerCrop"
                        app:failureImage="@drawable/ic_default_image"
                        app:failureImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/ic_default_image"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundAsCircle="false"
                        app:roundingBorderColor="@color/white"
                        app:roundingBorderWidth="0dp"
                        app:viewAspectRatio="1" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:text="讲解中"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/font_size_20px"
                        android:background="#CCFF5000"
                        android:layout_alignParentBottom="true"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="真维斯短袖T恤男潮夏装男士漫威联名钢铁侠体恤上衣"
                        android:textColor="#001426"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/font_size_24px" />

                    <TextView
                        android:id="@+id/source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_name"
                        android:layout_marginTop="3dp"
                        android:text="来自京东"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />



                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/source"
                            android:text="￥49.90"
                            android:layout_marginTop="5dp"
                            android:textColor="#ffff5000"
                            android:textSize="@dimen/font_size_28px" />

                        <TextView
                            android:id="@+id/see"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/source"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size_20px"
                            android:gravity="center"
                            android:background="@drawable/add_goods_btn_bg"
                            android:text="去看看" />



                </RelativeLayout>


            </LinearLayout>




        </LinearLayout>




    </RelativeLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>






        <com.tencent.xbright.lebwebrtcsdk.LEBWebRTCSurfaceView
            android:id="@+id/lebSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/noAnchor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:background="@drawable/no_anchor" />

            <TextView
                android:id="@+id/noScriptText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#E5E5E5"
                android:textSize="@dimen/font_size_32px"
                android:layout_gravity="center_horizontal"
                android:text="主播暂时离开~" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noScriptText"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#E5E5E5"
                android:textSize="@dimen/font_size_28px"
                android:layout_gravity="center_horizontal"
                android:text="休息片刻，更多精彩马上回来" />



        </RelativeLayout>

    </FrameLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.shuangling.software.customview.FontIconView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="&#xe62a;"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_40px" />

            <TextView
                android:id="@+id/viewerNumber"
                android:layout_width="wrap_content"
                android:minWidth="42dp"
                android:layout_height="36dp"
                android:layout_toLeftOf="@+id/close"
                android:layout_centerVertical="true"
                android:background="@drawable/inputbox_bg"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_24px" />

            <!--<HorizontalScrollView-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="2dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toLeftOf="@+id/viewerNumber"-->
            <!--android:layout_marginRight="2dp"-->
            <!--android:scrollbars="none">-->

            <LinearLayout
                android:id="@+id/viewerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/viewerNumber"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/inputbox_bg"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    app:actualImageScaleType="centerCrop"
                    app:failureImage="@drawable/ic_user3"
                    app:failureImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/ic_user3"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@color/white"
                    app:roundingBorderWidth="0dp"
                    app:viewAspectRatio="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_24px"
                        android:textStyle="bold"
                        tools:text="热心市民" />

                    <TextView
                        android:id="@+id/praiseNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#BFBFBF"
                        android:textSize="@dimen/font_size_16px"
                        tools:text="5.2万本场点赞" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/hotRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/inputbox_bg"
                android:drawableStart="@drawable/ic_hot"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="热度榜"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_24px"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/inviteRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/inputbox_bg"
                android:drawableStart="@drawable/ic_crown"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="邀请榜"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_24px"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/activityContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">


            <RelativeLayout
                android:id="@+id/luckRedPacket"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/red_packet_status_bg01"
                android:layout_marginRight="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_margin="3dp"
                    android:src="@drawable/luck_red_packet_icon"
                    />

                <TextView
                    android:id="@+id/luckRedPacketStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/red_packet_status_bg01"
                    android:textColor="#E7F2FC"
                    android:textSize="@dimen/font_size_18px"
                    tools:text="进行中" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/answer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red_packet_status_bg01"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_margin="3dp"
                    android:src="@drawable/answer_icon"
                    />

                <TextView
                    android:id="@+id/answerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/red_packet_status_bg01"
                    android:textColor="#E7F2FC"
                    android:textSize="@dimen/font_size_18px"
                    android:text="参与答题" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/luckAward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red_packet_status_bg01"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_margin="3dp"
                    android:src="@drawable/luck_award_icon"
                    />

                <TextView
                    android:id="@+id/luckAwardStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/red_packet_status_bg01"
                    android:textColor="#E7F2FC"
                    android:textSize="@dimen/font_size_18px"
                    android:text="幸运抽奖" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/passwordRedPacket"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red_packet_status_bg01"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_margin="3dp"
                    android:src="@drawable/password_red_packet_icon"
                    />

                <TextView
                    android:id="@+id/passwordRedPacketStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/red_packet_status_bg01"
                    android:textColor="#E7F2FC"
                    android:textSize="@dimen/font_size_18px"
                    android:text="口令红包" />
            </RelativeLayout>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/giftContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@+id/chat_msg_list"
            android:animateLayoutChanges="true"
            android:background="#00000000"
            android:gravity="bottom"
            android:orientation="vertical" />



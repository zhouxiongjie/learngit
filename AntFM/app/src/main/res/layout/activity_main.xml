<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divideColorOne"
            android:contentDescription="@string/divideLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/indexLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/indexIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&#xe614;"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textSize="@dimen/font_size_50px" />



                <TextView
                    android:id="@+id/index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/index"
                    android:textSize="@dimen/font_size_20px"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textStyle="bold"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/recommendLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/recommendIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&#xe635;"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textSize="@dimen/font_size_50px" />



                <TextView
                    android:id="@+id/recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/recommend"
                    android:textSize="@dimen/font_size_20px"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/discoverLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/discoverIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&#xe60b;"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textSize="@dimen/font_size_50px"/>



                <TextView
                    android:id="@+id/discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/service"
                    android:textSize="@dimen/font_size_20px"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textStyle="bold"
                    />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/personalCenterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/personalCenterIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&#xe61e;"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textSize="@dimen/font_size_50px" />



                <TextView
                    android:id="@+id/personalCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/personal_center"
                    android:textSize="@dimen/font_size_20px"
                    android:textColor="@color/main_bottom_text_selector"
                    android:textStyle="bold"
                    />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />


</android.support.constraint.ConstraintLayout>
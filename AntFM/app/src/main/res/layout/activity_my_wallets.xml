<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--<com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activtyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:canBack="true"
        app:moreText=""
        app:titleText="我的钱包" />-->
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>

    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/activity_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_money"
                android:drawablePadding="5dp"
                android:textSize="@dimen/font_size_28px"
                android:textColor="#333333"
                android:text="现金收益(元)"/>

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/font_size_60px"
                android:textColor="#4690FF"
                android:textStyle="bold"
                tools:text="1000.00"/>
            
        </LinearLayout>

        <TextView
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_button_bg"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:text="去提现"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_30px"
            android:textStyle="bold" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/aa"
        android:background="@color/divideColorOne"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:textSize="@dimen/font_size_30px"
        android:textStyle="bold"
        app:tabIndicatorColor="#4690FF"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#4690FF"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="#666666" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabPageIndicator"
        android:layout_above="@+id/actionLayout"/>

</RelativeLayout>
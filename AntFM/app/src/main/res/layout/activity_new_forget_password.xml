            <!--<EditText-->
            <!--android:id="@+id/newPassword"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:textSize="@dimen/font_size_32px"-->
            <!--android:textColor="#C7C7CC"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:background="@null"-->
            <!--android:hint="设置新密码"-->
            <!--android:inputType="textPassword"/>-->

            <!--</RelativeLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/gray_bottom_line">

                <EditText
                    android:id="@+id/newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请设置密码"
                    android:inputType="textPassword"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#C4C4C4"
                    android:textSize="@dimen/font_size_28px" />


                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="&#xe676;"
                    android:textColor="#B3B3B3"
                    android:textSize="@dimen/font_size_36px" />
            </RelativeLayout>


            <TextView
                android:id="@+id/passwordTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="需由6-20位数字、字母或符号组成，至少两种"
                android:textColor="#C7C7CC"
                android:textSize="@dimen/font_size_26px" />

            <Button
                android:id="@+id/resetPassword"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/login_button_bg"
                android:enabled="false"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_32px" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>




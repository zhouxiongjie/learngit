<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activtyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@mipmap/ic_launcher"
        app:failureImageScaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activtyTitle"
        app:placeholderImage="@mipmap/ic_launcher"
        app:placeholderImageScaleType="centerCrop"
        app:roundingBorderColor="@color/white"
        app:roundingBorderWidth="0dp"
        app:viewAspectRatio="1" />

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_42px"
        android:text="登录/注册"/>





    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gray_bottom_line"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="@dimen/font_size_32px"
        android:textColor="@color/black"
        android:textColorHint="#C7C7CC"
        android:hint="请输入手机号码"
        android:inputType="phone" />


    <Button
        android:id="@+id/sendCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNum"
        android:layout_marginTop="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:text="发送验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_32px"
        android:background="@drawable/login_button_bg"/>

    <TextView
        android:id="@+id/passwordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="使用密码登录"
        android:textColor="?attr/themeColor"
        android:textSize="@dimen/font_size_26px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendCode" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未注册手机验证后自动登录"
        android:textColor="#A0A0A0"
        android:textSize="@dimen/font_size_26px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordLogin" />
    <LinearLayout
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即代表同意"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/font_size_26px"
            />
        <TextView
            android:id="@+id/useProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《使用协议》"
            android:textColor="?attr/themeColor"
            android:textSize="@dimen/font_size_26px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/font_size_26px"
            />
        <TextView
            android:id="@+id/secretProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:textColor="?attr/themeColor"
            android:textSize="@dimen/font_size_26px"
            />
    </LinearLayout>






    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c"
        app:layout_constraintBottom_toTopOf="@+id/support">

        <ImageView
            android:id="@+id/weiXin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_weixin" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:background="@drawable/login_qq"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/weiBo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:background="@drawable/login_weibo"
            android:visibility="gone"/>


    </LinearLayout>


    <TextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginBottom="10dp"
        android:text="湖南双菱电子科技有限公司提供技术支持"
        android:textColor="#DCDCDC"
        android:textSize="@dimen/font_size_22px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>

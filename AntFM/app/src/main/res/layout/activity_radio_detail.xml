<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


<!--        <com.shuangling.software.customview.TopTitleBar-->
<!--            android:id="@+id/activity_title"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            fresco:canBack="true"-->
<!--            fresco:moreImg="@drawable/ic_more" />-->
        <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divideColorOne" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:background="@drawable/radio_bg">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/programName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_40px"
                            tools:text="中国交通广播" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="主播:"
                                android:textColor="#F6FAFF"
                                android:textSize="@dimen/font_size_30px" />

                            <TextView
                                android:id="@+id/anchorName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="10dp"
                                android:textColor="#F6FAFF"
                                android:textSize="@dimen/font_size_30px"
                                tools:text="李四" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/startTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#F6FAFF"
                                android:textSize="@dimen/font_size_30px"
                                tools:text="09:30" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="－"
                                android:textColor="#F6FAFF"
                                android:textSize="@dimen/font_size_30px" />

                            <TextView
                                android:id="@+id/finishTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#F6FAFF"
                                android:textSize="@dimen/font_size_30px"
                                tools:text="16:00" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/currentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:text="00:00"
                        android:textColor="@color/textColorSix"
                        android:textSize="@dimen/font_size_26px" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:text="00:00"
                        android:textColor="@color/textColorSix"
                        android:textSize="@dimen/font_size_26px" />


                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/endTime"
                        android:layout_toEndOf="@+id/currentTime"
                        android:maxHeight="5dp"
                        android:minHeight="5dp"

                        android:progressDrawable="@drawable/my_seekbar_style"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_thumb" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/actionBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp">

                        <TextView
                            android:id="@+id/list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/ic_list"
                            android:drawablePadding="5dp"
                            android:text="节目单"
                            android:textColor="@color/textColorTen"
                            android:textSize="@dimen/font_size_26px" />
                    </RelativeLayout>

                    <!--<ImageButton-->
                    <!--android:id="@+id/play"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@drawable/ic_play" />-->
                    <com.shuangling.software.customview.FontIconView
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="&#xe607;"
                        android:textColor="?attr/themeColor"
                        android:textSize="@dimen/font_size_150px" />
                    <!--<ImageButton-->
                    <!--android:id="@+id/previous"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="30dp"-->
                    <!--android:layout_toLeftOf="@+id/play"-->
                    <!--android:background="@drawable/ic_back_off" />-->


                    <com.shuangling.software.customview.FontIconView
                        android:id="@+id/previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/play"
                        android:text="&#xe620;"
                        android:textColor="?attr/themeColor"
                        android:textSize="@dimen/font_size_50px" />

                    <!--<ImageButton-->
                    <!--android:id="@+id/next"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="30dp"-->
                    <!--android:layout_toRightOf="@+id/play"-->
                    <!--android:background="@drawable/ic_fast_forward" />-->

                    <com.shuangling.software.customview.FontIconView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/play"
                        android:text="&#xe622;"
                        android:textColor="?attr/themeColor"
                        android:textSize="@dimen/font_size_50px" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:drawableTop="@drawable/ic_timing"
                            android:drawablePadding="5dp"
                            android:text="定时"
                            android:textColor="@color/textColorTen"
                            android:textSize="@dimen/font_size_26px" />

                    </RelativeLayout>


                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/divideColorTwo" />


                <RelativeLayout
                    android:id="@+id/root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/logo"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:placeholderImage="@drawable/article_placeholder"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundedCornerRadius="4dp"
                        fresco:viewAspectRatio="1" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/logo"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lineSpacingExtra="5dp"
                            android:lineSpacingMultiplier="1.0"
                            android:lines="1"
                            android:maxLines="1"
                            android:textColor="@color/textColorTwo"
                            android:textSize="@dimen/font_size_15sp"
                            android:textStyle="bold"
                            tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/organization"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableStart="@drawable/ic_organization1"
                                android:drawablePadding="2dp"
                                android:ellipsize="end"
                                android:lineSpacingExtra="5dp"
                                android:lineSpacingMultiplier="1.0"
                                android:lines="1"
                                android:text="正在直播"
                                android:textColor="@color/textColorNine"
                                android:textSize="@dimen/font_size_26px" />


                            <TextView
                                android:id="@+id/collect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/collect_bg"
                                android:drawableStart="@drawable/collect_selector"
                                android:drawablePadding="0dp"
                                android:gravity="center"
                                android:minWidth="70dp"
                                android:minHeight="30dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="未收藏"
                                android:textColor="@color/collect_color_selector"
                                android:textSize="@dimen/font_size_24px" />


                            <!--<LinearLayout-->
                            <!--android:id="@+id/collectLayout"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_alignParentEnd="true"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:background="@drawable/subscribe_text_bg"-->
                            <!--android:padding="5dp"-->
                            <!--android:orientation="horizontal">-->

                            <!--<ImageView-->
                            <!--android:id="@+id/collectIcon"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@drawable/ic_collect"-->
                            <!--android:layout_gravity="center_vertical"/>-->
                            <!--<TextView-->
                            <!--android:id="@+id/collect"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:textColor="@color/textColorFive"-->
                            <!--android:textSize="@dimen/font_size_24px"-->
                            <!--android:layout_marginStart="5dp"-->
                            <!--tools:text="收藏" />-->
                            <!--</LinearLayout>-->


                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/divideColorTwo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="相关推荐"
                    android:textColor="@color/textColorTwo"
                    android:textSize="@dimen/font_size_36px" />


                <com.shuangling.software.customview.MyListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </com.shuangling.software.customview.MyListView>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>



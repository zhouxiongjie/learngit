<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.shuangling.software.customview.TopTitleBar
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:canBack="true"
        app:titleText="举报" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divideColorOne" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="*"
                    android:textColor="#FF6567"
                    android:textSize="@dimen/font_size_30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="内容违规"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_32px" />


            </LinearLayout>



            <com.shuangling.software.customview.MyGridView
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:horizontalSpacing="0dp"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="10dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divideColorOne" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="举报描述"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_32px" />


            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:textColorHint="#CCCCCC"
                android:hint="请描述你遇到的问题"
                android:background="@null"
                android:textSize="@dimen/font_size_32px"
                android:maxLength="200"
                android:lines="4"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/descLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/font_size_28px"
                android:layout_marginBottom="5dp"
                android:text="0/200"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divideColorOne" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="证明材料"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_32px" />


            <com.shuangling.software.customview.MyGridView
                android:id="@+id/material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="请具体指出文章内容哪处不实或侵权，并提供证据予以反驳，或就文章提出的具体现象进行正面解答。组织投诉请提供加盖公章的撤稿函。图片大小限制10MB"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/font_size_24px" />


            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@drawable/submit_button_bg"
                android:gravity="center"
                android:text="完成"
                android:enabled="true"
                android:textColor="@color/submit_text_selector"
                android:textSize="@dimen/font_size_36px"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>



        </LinearLayout>

    </ScrollView>


</LinearLayout>

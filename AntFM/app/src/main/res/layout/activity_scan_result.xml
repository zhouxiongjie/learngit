<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/scan_result_error"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="无法解析此二维码内容"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_28px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_gravity="center_horizontal"
                android:text="已扫描到以下内容"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_26px"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                tools:text="蓝湖是一款产品文档和设计图的共享平台,帮助互联网团队更好地管理文档和设计图。蓝湖可以在线展示Axure,自动生成设计图标注,与团队共享设计图,展示页面之间的跳转关系"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_30px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/webset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/webset"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="将要访问网址："
                android:textColor="#666666"
                android:textSize="@dimen/font_size_28px"/>

            <TextView
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                tools:text="https://lanhuapp.com/web/#/item/project/detail Detach?pid=771d389f-2d0a-479f-b51b-8c31f1e 6acd8project_id=771d389f-2d0a-479f-b51b..."
                android:textColor="#2995FA"
                android:textSize="@dimen/font_size_28px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="非菱听视界官方网址"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_28px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="请注意你的账号和财产安全，谨慎访问。"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_28px"/>

            <TextView
                android:id="@+id/access"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="继续访问"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/access_button_bg"
                android:textSize="@dimen/font_size_26px"/>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
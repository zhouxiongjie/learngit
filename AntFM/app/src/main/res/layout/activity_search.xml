<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/searchCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_32px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/searchCancel"
            android:background="@drawable/search_box_1_bg"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="5dp"
            android:hint="请输入搜索内容"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="text"

            android:textColor="#999999"
            android:imeOptions="actionSearch"
            android:textSize="@dimen/font_size_24px" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="搜索历史"
                        android:textColor="#333333"
                        android:textSize="@dimen/font_size_30px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/clean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="清空"
                        android:textColor="#1CA0FF"
                        android:textSize="@dimen/font_size_26px" />

                </RelativeLayout>

                <com.shuangling.software.customview.LineWrapLayout
                    android:id="@+id/historyList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/searchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >
            <android.support.design.widget.TabLayout
                android:id="@+id/tabPageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_30px"
                android:textStyle="bold"
                app:tabMode="scrollable"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorColor="@color/textColorOne"
                app:tabSelectedTextColor="@color/textColorOne"
                app:tabTextColor="@color/black"
                app:tabIndicatorFullWidth="false"
                app:tabMaxWidth="80dp"
                app:tabTextAppearance="@style/TabTextStyle"
                />
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </FrameLayout>




</LinearLayout>

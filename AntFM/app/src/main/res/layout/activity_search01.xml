<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/searchCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_32px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/searchCancel"
            android:background="@drawable/search_box_1_bg"
            android:drawableLeft="@drawable/ic_search_gray"
            android:drawablePadding="5dp"
            android:hint="请输入搜索内容"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="text"

            android:textColor="#999999"
            android:imeOptions="actionSearch"
            android:textSize="@dimen/font_size_24px" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/historyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="搜索历史"
                        android:textColor="#999999"
                        android:textSize="@dimen/font_size_30px"
                        android:textStyle="bold" />

                    <com.shuangling.software.customview.FontIconView
                        android:id="@+id/expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/historyText"
                        android:text="@string/arrow_down01"
                        android:textColor="#999999"
                        android:textSize="@dimen/font_size_36px"/>

<!--                    <TextView-->
<!--                        android:id="@+id/clean"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:text="清空"-->
<!--                        android:textColor="?attr/themeColor"-->
<!--                        android:textSize="@dimen/font_size_26px" />-->

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <com.shuangling.software.customview.FontIconView
                            android:id="@+id/clean"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#xe632;"
                            android:layout_gravity="center_vertical|right"
                            android:textColor="#999999"
                            android:textSize="@dimen/font_size_36px"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/deleteAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="全部删除"
                                android:textSize="@dimen/font_size_28px"
                                android:layout_gravity="center_vertical"
                                android:textColor="#4D4D4D"/>

                            <TextView
                                android:id="@+id/finish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="完成"
                                android:layout_marginLeft="20dp"
                                android:textSize="@dimen/font_size_28px"
                                android:textColor="#4D4D4D"/>

                        </LinearLayout>

                    </FrameLayout>




                </RelativeLayout>

                <com.shuangling.software.customview.LineWrapLayout
                    android:id="@+id/historyList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/searchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabPageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_30px"
                android:textStyle="bold"
                app:tabIndicatorColor="?attr/themeColor"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="2dp"
                app:tabMaxWidth="80dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="?attr/themeColor"
                app:tabTextAppearance="@style/TabTextStyle"
                app:tabTextColor="@color/black"
                />
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </FrameLayout>




</LinearLayout>

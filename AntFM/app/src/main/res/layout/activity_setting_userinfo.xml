        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_32px"
        android:background="@drawable/login_button_bg"/>


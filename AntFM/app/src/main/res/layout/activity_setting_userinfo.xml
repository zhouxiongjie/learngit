        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="设置个人信息"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_38px" />

    <TextView

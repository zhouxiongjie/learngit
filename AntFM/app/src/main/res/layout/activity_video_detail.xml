    <RelativeLayout
        android:id="@+id/organizationLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aliyunVodPlayerView"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/organizationLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:failureImage="@drawable/head_placeholder"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/head_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="0dp"
            fresco:viewAspectRatio="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/organizationLogo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:textColor="#282828"
                android:textSize="@dimen/font_size_28px"
                android:textStyle="bold"
                tools:text="浏阳电台" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:textColor="#BCBCBC"
                android:textSize="@dimen/font_size_28px"
                tools:text="2小时前" />
        </LinearLayout>


        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:minHeight="29dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/subscribe_text_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关注"
            android:textColor="@color/subscribe_text_selector"
            android:textSize="@dimen/font_size_24px" />


    </RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<com.shuangling.software.customview.AutoScrollViewPager
		android:id="@+id/autoScrollViewPager"
		android:layout_width="match_parent"  
		android:layout_height="match_parent"
		android:layout_centerInParent="true" />
	<RelativeLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/transparent"
		android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="3dp">
		<com.shuangling.software.customview.CirclePageIndicator
			android:id="@+id/autoPageIndicator"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
			android:background="@drawable/viewpager_indicator_bg1"
	        app:radius="2.5dp"
            app:dotMargin="10dp"
            app:strokeWidth="0dp"
			app:strokeColor="@color/gray"
			app:pageColor="@color/gray"
			app:fillColor="@color/white"
			android:layout_centerHorizontal="true"
            />

		<TextView
			android:id="@+id/advertDesc"
			android:textSize="@dimen/font_size_28px"
			android:textColor="@color/whitesmoke"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:maxLines="1"
			android:layout_below="@+id/autoPageIndicator"
			android:layout_alignParentLeft="true"
            android:visibility="gone"/>
	</RelativeLayout>	
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/anchor"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/head_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:failureImage="@drawable/head_placeholder"
        fresco:failureImageScaleType="centerCrop"
        fresco:viewAspectRatio="1"
        fresco:roundAsCircle="false"
        fresco:roundingBorderWidth="0dp"
        fresco:roundingBorderColor="@color/ghostwhite" />

    <TextView
        android:id="@+id/anchorName"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/font_size_24px"
        android:textColor="@color/textColorTwo"
        android:text="李小四"/>


</LinearLayout>
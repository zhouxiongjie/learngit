<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/personal_center_user_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/head_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:viewAspectRatio="1"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/logo"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_authentication" />
    </RelativeLayout>








    <TextView
        android:id="@+id/anchorName"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/font_size_30px"
        android:textColor="@color/textColorTwo"
        android:textStyle="bold"
        android:ellipsize="end"
        android:text="李小四"/>

    <TextView
        android:id="@+id/desc"
        android:lines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anchorName"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/font_size_26px"
        android:textColor="#313131"
        android:ellipsize="end"
        android:text="这是我最最喜欢的主播，爱你么么哒"/>


    <TextView
        android:id="@+id/attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/attention_button_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="关注"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_28px" />


</LinearLayout>
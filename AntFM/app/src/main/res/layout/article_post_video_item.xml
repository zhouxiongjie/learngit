<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gray_bottom_line01"
    android:padding="10dp">
    <TextView
        android:id="@+id/excellent"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/excellent_recommend"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_36px"
        android:textStyle="bold"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="@dimen/article_right_image_width"
            fresco:viewAspectRatio="1.5"
            android:layout_height="wrap_content"
            fresco:placeholderImage="@drawable/article_placeholder"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            fresco:roundedCornerRadius="4dp"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:actualImageScaleType="centerCrop" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/logo"
            android:layout_alignEnd="@+id/logo"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:background="@drawable/video_duration_text_bg">

            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="&#xe638;"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20px" />
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20px"
                tools:text="04:30" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/logo"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_17sp"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.0"
                android:lines="2"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <!--<TextView-->
                    <!--android:id="@+id/merchant"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:ellipsize="end"-->
                    <!--android:maxLines="1"-->
                    <!--android:layout_marginEnd="15dp"-->
                    <!--android:textColor="@color/textColorThree"-->
                    <!--android:textSize="@dimen/font_size_24px"-->
                    <!--tools:text="浏阳电台" />-->

                <TextView
                    android:id="@+id/playTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/textColorThree"
                    android:textSize="@dimen/font_size_24px"
                    android:visibility="invisible"
                    tools:text="5.2万次播放" />

                <!--<TextView-->
                    <!--android:id="@+id/publishTime"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:ellipsize="end"-->
                    <!--android:maxLines="1"-->
                    <!--android:layout_marginEnd="15dp"-->
                    <!--android:textColor="@color/textColorThree"-->
                    <!--android:textSize="@dimen/font_size_24px"-->
                    <!--tools:text="5小时前" />-->


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    




</LinearLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/playTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="25人阅读"
        android:textColor="@color/textColorSeven"
        android:textSize="@dimen/font_size_24px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">



        <RelativeLayout
            android:id="@+id/praiseLayout"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/praise_and_collect_bg" >

            <TextView
                android:id="@+id/praiseSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/praise_selector"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:textColor="@color/praise_color_selector"
                android:textSize="@dimen/font_size_24px"
                tools:text="25"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/collectLayout"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/praise_and_collect_bg" >
            <TextView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/collect_color_selector"
                android:textSize="@dimen/font_size_24px"
                android:drawableStart="@drawable/collect_selector"
                android:drawablePadding="10dp"
                android:text="已收藏"/>

        </RelativeLayout>






    </LinearLayout>
</LinearLayout>
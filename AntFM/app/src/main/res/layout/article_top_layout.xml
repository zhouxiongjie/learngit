<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <com.shuangling.software.customview.TextViewFollowOrtherView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_48px"
            android:textColor="#222222"
            tools:text="北京电影学院艺考北京电影学院艺考北京电影学院艺考北京电影学院艺考"
            android:textStyle="bold"/>

        <com.shuangling.software.customview.FontIconView
            android:id="@+id/playVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xe6ad;"
            android:textColor="?attr/themeColor"
            android:textSize="@dimen/font_size_50px"
            android:visibility="invisible"
            />

    </com.shuangling.software.customview.TextViewFollowOrtherView>



    <RelativeLayout
        android:id="@+id/organizationLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aliyunVodPlayerView"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/organizationLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:failureImage="@drawable/head_placeholder"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/head_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="0dp"
            fresco:viewAspectRatio="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/organizationLogo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:textColor="#282828"
                android:textSize="@dimen/font_size_28px"
                android:textStyle="bold"
                tools:text="浏阳电台" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:textColor="#BCBCBC"
                android:textSize="@dimen/font_size_24px"
                tools:text="2小时前" />
        </LinearLayout>


        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:minHeight="29dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/subscribe_text_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关注"
            android:textColor="@color/subscribe_text_selector"
            android:textSize="@dimen/font_size_24px" />


    </RelativeLayout>

    <!--<com.shuangling.software.customview.MyWebView-->
        <!--android:id="@+id/webView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="500dp"-->
        <!--android:visibility="visible" />-->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/playTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:text="25人阅读"
            android:textColor="@color/textColorSeven"
            android:textSize="@dimen/font_size_24px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">



            <RelativeLayout
                android:id="@+id/praiseLayout"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/praise_and_collect_bg" >

                <TextView
                    android:id="@+id/praiseSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/praise_selector"
                    android:drawablePadding="10dp"
                    android:padding="3dp"
                    android:textColor="@color/praise_color_selector"
                    android:textSize="@dimen/font_size_24px"
                    tools:text="25"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/collectLayout"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/praise_and_collect_bg" >
                <TextView
                    android:id="@+id/collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/collect_color_selector"
                    android:textSize="@dimen/font_size_24px"
                    android:drawableStart="@drawable/collect_selector"
                    android:drawablePadding="10dp"
                    android:text="已收藏"/>

            </RelativeLayout>






        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#EFEFEF"/>


    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="10dp"-->
        <!--android:text="相关推荐"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="@dimen/font_size_36px" />-->


</LinearLayout>






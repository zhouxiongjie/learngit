<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/article_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="4dp"
        fresco:viewAspectRatio="1" />

    <TextView
        android:id="@+id/audioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.0"
        android:maxLines="2"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_17sp"
        tools:text="资讯文章内容中只有2张图资讯文章内资讯文章内容中只有2张图资讯文章内资讯文章内容中只有2张图资讯文章内" />

    <TextView
        android:id="@+id/organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.0"
        android:maxLines="1"
        android:textColor="@color/textColorSeven"
        android:textSize="@dimen/font_size_26px"
        tools:text="王大锤" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="00:00"
            android:textColor="@color/textColorSix"
            android:textSize="@dimen/font_size_26px" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="04:30"
            android:textColor="@color/textColorSix"
            android:textSize="@dimen/font_size_26px" />


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/currentTime"
            android:layout_toStartOf="@+id/endTime"
            android:maxHeight="5dp"
            android:minHeight="5dp"

            android:progressDrawable="@drawable/my_seekbar_style"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <!--<ImageButton-->
        <!--android:id="@+id/play"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/ic_play" />-->
        <com.shuangling.software.customview.FontIconView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="&#xe607;"
            android:textColor="?attr/themeColor"
            android:textSize="75sp" />

        <!--<ImageButton-->
        <!--android:id="@+id/previous"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:layout_toLeftOf="@+id/play"-->
        <!--android:background="@drawable/ic_back_off" />-->
        <com.shuangling.software.customview.FontIconView
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/play"
            android:text="&#xe620;"
            android:textColor="?attr/themeColor"
            android:textSize="25sp" />

        <!--<ImageButton-->
        <!--android:id="@+id/next"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_toRightOf="@+id/play"-->
        <!--android:background="@drawable/ic_fast_forward" />-->
        <com.shuangling.software.customview.FontIconView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/play"
            android:text="&#xe622;"
            android:textColor="?attr/themeColor"
            android:textSize="25sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_list"
                android:text="列表"
                android:textColor="@color/textColorTen"
                android:textSize="@dimen/font_size_26px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_timing"
                android:text="定时"
                android:textColor="@color/textColorTen"
                android:textSize="@dimen/font_size_26px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_multiple"
                android:text="倍速"
                android:textColor="@color/textColorTen"
                android:textSize="@dimen/font_size_26px" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorTwo" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="10dp"-->
    <!--android:text="所属专辑"-->
    <!--android:textColor="@color/black"-->
    <!--android:textSize="@dimen/font_size_36px" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/albumLogo"
            android:layout_width="@dimen/article_right_image_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/article_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="4dp"
            fresco:viewAspectRatio="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/albumLogo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/albumTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.0"
                android:maxLines="2"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_17sp"
                tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->


                    <!--</LinearLayout>-->

                    <!--<com.facebook.drawee.view.SimpleDraweeView-->
                    <!--android:id="@+id/head"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--fresco:actualImageScaleType="centerCrop"-->
                    <!--fresco:placeholderImage="@drawable/head_placeholder"-->
                    <!--fresco:placeholderImageScaleType="centerCrop"-->
                    <!--fresco:roundAsCircle="true"-->
                    <!--fresco:viewAspectRatio="1" />-->


                    <TextView
                        android:id="@+id/anchorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王大锤"
                        android:textColor="@color/textColorSeven"
                        android:textSize="@dimen/font_size_26px" />

                    <TextView
                        android:id="@+id/audioNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="20集"
                        android:textColor="#B3B3B3"
                        android:textSize="@dimen/font_size_26px" />

                </LinearLayout>


                <TextView
                    android:id="@+id/subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/subscribe_text_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="29dp"
                    android:minWidth="60dp"
                    android:textColor="@color/subscribe_text_selector"
                    android:textSize="@dimen/font_size_24px"
                    tools:text="已订阅" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorTwo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="相关推荐"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_36px" />


</LinearLayout>






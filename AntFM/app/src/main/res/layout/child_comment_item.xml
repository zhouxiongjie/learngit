        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="11-25 11:39"
                android:textColor="#B2B2B2"
                android:textSize="@dimen/font_size_22px" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/circle"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toEndOf="@+id/time"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@color/textColorTwelve"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@color/textColorTwelve"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="0dp"
                app:viewAspectRatio="1" />

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/circle"
                android:background="@color/transparent"
                android:text="回复"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_22px" />



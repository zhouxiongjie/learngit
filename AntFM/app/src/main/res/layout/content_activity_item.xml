<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/excellent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/excellentLogo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/excellentLogo"
            android:text="@string/excellent_recommend"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_36px"
            android:textStyle="bold"
            android:visibility="visible"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.0"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        fresco:qmui_skin_text_color="?attr/app_skin_title_color"
        android:textSize="@dimen/font_size_17sp"
        tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            fresco:roundedCornerRadius="4dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/video_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundingBorderWidth="1px"
            fresco:roundingBorderColor="#EAEAEA"
            fresco:viewAspectRatio="1.778" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/video_play_icon"
            android:scaleType="centerCrop"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_duration_text_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_22px"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_picture"
            android:drawablePadding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            tools:text="5图"
            android:visibility="gone"/>

    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"

            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/top"
            android:textColor="@color/textColorFour"
            android:textSize="@dimen/font_size_24px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:background="@drawable/activity_text_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="活动"
            android:textColor="?attr/themeColor"
            android:textSize="@dimen/font_size_18px"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="15dp"
            fresco:qmui_skin_text_color="?attr/app_skin_attribute_color"
            android:textSize="@dimen/font_size_24px"
            tools:text="浏阳电台" />

        <TextView
            android:id="@+id/publishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="15dp"
            fresco:qmui_skin_text_color="?attr/app_skin_attribute_color"
            android:textSize="@dimen/font_size_24px"
            tools:text="5小时前"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            fresco:qmui_skin_text_color="?attr/app_skin_attribute_color"
            android:textSize="@dimen/font_size_24px"
            tools:text="52人参与" />




    </LinearLayout>

</LinearLayout>




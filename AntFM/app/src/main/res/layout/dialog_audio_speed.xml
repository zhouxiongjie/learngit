                android:text="0.75倍速"
                android:textStyle="bold"
                android:textColor="@color/audio_speed_text_selector"
                android:textSize="@dimen/font_size_30px" />

            <ImageView
                android:id="@+id/speed075"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checked"
                android:visibility="gone"
                />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recycleview_divider_drawable"/>

        <RelativeLayout
            android:id="@+id/speed100RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:padding="20dp">

            <TextView
                android:id="@+id/speed100Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="正常倍速"
                android:textStyle="bold"
                android:textColor="@color/audio_speed_text_selector"
                android:textSize="@dimen/font_size_30px" />

            <ImageView
                android:id="@+id/speed100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checked"
                android:visibility="gone"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recycleview_divider_drawable"/>

        <RelativeLayout
            android:id="@+id/speed125RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:padding="20dp">

            <TextView
                android:id="@+id/speed125Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="1.25倍速"
                android:textStyle="bold"
                android:textColor="@color/audio_speed_text_selector"
                android:textSize="@dimen/font_size_30px" />

            <ImageView
                android:id="@+id/speed125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checked"
                android:visibility="gone"
                />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recycleview_divider_drawable"/>

        <RelativeLayout
            android:id="@+id/speed150RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:padding="20dp">

            <TextView
                android:id="@+id/speed150Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1.5倍速"
                android:textStyle="bold"
                android:textColor="@color/audio_speed_text_selector"
                android:textSize="@dimen/font_size_30px" />

            <ImageView
                android:id="@+id/speed150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checked"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/float_close_icon"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/close">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/close"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/myColumn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的栏目"
                        android:textSize="@dimen/font_size_36px"
                        android:textColor="#222222"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/myColumn"
                        android:visibility="gone"
                        android:layout_alignBaseline="@+id/myColumn"
                        android:layout_marginLeft="10dp"
                        android:text="拖拽可以排序"
                        android:textSize="@dimen/font_size_20px"
                        android:textColor="#A9A9A9"/>

                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="编辑"
                        android:visibility="gone"
                        android:textSize="@dimen/font_size_24px"
                        android:textColor="?attr/themeColor"
                        android:background="@drawable/editor_btn_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <com.shuangling.software.customview.DragGridView
                    android:id="@+id/dragGridView"
                    android:scrollbars="none"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:cacheColorHint="@android:color/transparent"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:numColumns="4" >
                </com.shuangling.software.customview.DragGridView>
                <RelativeLayout
                    android:id="@+id/moreLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dragGridView"
                    android:visibility="gone"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/moreColumn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多栏目"
                        android:textSize="@dimen/font_size_36px"
                        android:textColor="#222222"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/moreColumn"
                        android:layout_alignBaseline="@+id/moreColumn"
                        android:layout_marginLeft="10dp"
                        android:text="点击添加栏目"
                        android:textSize="@dimen/font_size_20px"
                        android:textColor="#A9A9A9"/>



                </RelativeLayout>

                <com.shuangling.software.customview.MyGridView
                    android:id="@+id/gridView"
                    android:layout_below="@+id/moreLayout"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@android:color/transparent"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:numColumns="4" >
                </com.shuangling.software.customview.MyGridView>



            </LinearLayout>
        </ScrollView>


    </RelativeLayout>



</RelativeLayout>

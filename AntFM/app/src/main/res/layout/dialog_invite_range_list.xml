<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/send_red_packet_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_back_black"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="邀请榜"
                android:textColor="@color/textColorEight"
                android:textSize="@dimen/font_size_32px" />


            <ImageView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_question"
                android:visibility="gone" />

            <!--<TextView-->
            <!--android:id="@+id/cancel"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="取消"-->
            <!--android:textColor="@color/textColorNine"-->
            <!--android:textSize="@dimen/font_size_30px"-->
            <!--android:visibility="gone" />-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E0E0E0" />

        <RelativeLayout

            android:id="@+id/hotRangeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="visible">
            <RelativeLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone"
                android:background="#191890FF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排名靠前用户有机会获奖,奖金可在更多-钱包内提现"
                    android:drawablePadding="3dp"
                    android:textSize="@dimen/font_size_24px"
                    android:textColor="#1890FF"
                    android:drawableLeft="@drawable/red_packet_small_icon"
                    android:layout_centerInParent="true"
                    android:padding="5dp"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_below="@+id/a">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="观众信息"
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_20px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="邀请人数"
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_20px" />

                <TextView
                    android:id="@+id/totalAward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="累计奖金"
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_20px" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/b"
                android:layout_above="@+id/bottomBar"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/noData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/no_data" />

                <TextView
                    android:id="@+id/noScriptText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:text="暂无数据"
                    android:textColor="#A2A2A2"
                    android:textSize="@dimen/font_size_32px" />


            </LinearLayout>


            <FrameLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/live_invite_info_bg"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">


                <RelativeLayout
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="?attr/themeColor"
                        android:textSize="@dimen/font_size_30px"
                        android:textStyle="bold"
                        tools:text="1" />


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/order"
                        app:actualImageScaleType="centerCrop"
                        app:failureImage="@drawable/ic_user3"
                        app:failureImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/ic_user3"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundAsCircle="true"
                        app:roundingBorderColor="@color/white"
                        app:roundingBorderWidth="0dp"
                        app:viewAspectRatio="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/logo"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="流动的忧郁"
                            android:textColor="#333333"
                            android:textSize="@dimen/font_size_30px" />


                        <TextView
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            tools:text="邀请0人 获得100"
                            android:textColor="#999999"
                            android:textSize="@dimen/font_size_22px" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/gotoInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/attention_button_bg02"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="我要邀请"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/font_size_28px" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/gotoInvite"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="距离上一名还差"
                            android:textColor="#999999"
                            android:textSize="@dimen/font_size_22px" />


                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:ellipsize="end"
                            android:lines="1"
                            tools:text="1人"
                            android:textColor="#999999"
                            android:textSize="@dimen/font_size_22px" />


                    </LinearLayout>



                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="邀请好友看直播有机会拿奖品哦"
                            android:textColor="#1890FF"
                            android:textSize="@dimen/font_size_30px" />
                        <TextView
                            android:id="@+id/gotoInvite01"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/attention_button_bg02"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="我要邀请"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size_28px" />

                    </LinearLayout>






                </RelativeLayout>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>



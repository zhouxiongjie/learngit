<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/live_more_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="更多"
                android:textColor="#B6B6B7"
                android:textSize="@dimen/font_size_32px" />


            <!--<TextView-->
            <!--android:id="@+id/cancel"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="取消"-->
            <!--android:textColor="@color/textColorNine"-->
            <!--android:textSize="@dimen/font_size_30px" />-->

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&#xe76d;"
                    android:textColor="#B6B6B7"
                    android:textSize="@dimen/font_size_36px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="分享"
                    android:textColor="#B6B6B7"
                    android:textSize="@dimen/font_size_26px" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/wallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/walletIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&#xe76f;"
                    android:textColor="#B6B6B7"
                    android:textSize="@dimen/font_size_36px" />


                <TextView
                    android:id="@+id/beautyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="钱包"
                    android:textColor="#B6B6B7"
                    android:textSize="@dimen/font_size_26px" />

            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

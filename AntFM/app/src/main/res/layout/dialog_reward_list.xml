<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/send_red_packet_dialog_bg"
        android:padding="0dp">


        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="中奖名单"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_32px" />


            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="@color/textColorNine"
                android:textSize="@dimen/font_size_30px"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26FFBD5D"
            android:text="根据直播提示，在规定时间内最快回复正确口令的小伙伴有机会获奖"
            android:textColor="#666666"
            android:padding="10dp"
            android:textSize="@dimen/font_size_22px"
            android:layout_below="@+id/topBar"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_below="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_14sp"
            app:drawableTopCompat="@drawable/no_img_text" />
    </RelativeLayout>


</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_poster"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selections_poster_bg">

        <com.facebook.drawee.view.SimpleDraweeView

            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="224dp"

            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundBottomLeft="false"
            app:roundBottomRight="false"
            app:roundedCornerRadius="10dp">


        </com.facebook.drawee.view.SimpleDraweeView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="聚焦下沉市场家庭教育场景，互联网教育平台"
            android:textColor="#ff333333"
            android:textSize="@dimen/font_size_40px"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"


            />

        <!--<TextView-->
            <!--android:id="@+id/tv_des"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="    「观书学到」定位互联网教育平台，希望将社交新零售和在线知识付费形式相结合，用OMO模式为家庭提供..."-->
            <!--android:textColor="#ff999999"-->
            <!--android:textSize="11sp"-->


            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_marginBottom="15dp"-->
            <!--/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播开始时间"
            android:textSize="@dimen/font_size_26px"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="15dp"
            android:background="#333333"/>

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020年9月14日16:00"
            android:textSize="@dimen/font_size_26px"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/iv_qr_code"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/userLogo"
                        app:roundAsCircle="true"
                        app:roundingBorderColor="@color/white"
                        app:roundingBorderWidth="0dp"
                        app:viewAspectRatio="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/ic_user1"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="靠靠"
                            android:textColor="#333333"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/font_size_26px"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="邀请您一起观看"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_20px"
                            />
                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_alignParentBottom ="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长按识别二维码立即进入"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/font_size_22px"

                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="60dp"
                android:layout_alignParentRight ="true"
                android:layout_height="60dp" />

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selections_layout_bg"
        android:orientation="vertical"
        android:padding="0dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_download" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="保存图片"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/weiXin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_wx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="微信好友"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/weiXinFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_wx_friends" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="朋友圈"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weiXinCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_wx_collect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="微信收藏"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="QQ好友"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qqZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_qq_zone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="QQ空间"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/share_wb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="新浪微博"
                        android:textColor="#222222"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>


        <!--<HorizontalScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scrollbars="none">-->

        <LinearLayout
            android:layout_width="match_parent"

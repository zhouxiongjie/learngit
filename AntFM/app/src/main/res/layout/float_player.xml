<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/float_player_bg">

    <com.shuangln.antfm.customview.ProgressCircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        />

    <LinearLayout
        android:id="@+id/controllerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@color/divideColorTwo"/>
        <ImageView
            android:id="@+id/play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/float_play_icon"/>
        <ImageView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/divideColorTwo"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/float_next_icon"/>
        <ImageView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/divideColorTwo"/>
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/float_close_icon"/>

    </LinearLayout>



</LinearLayout>

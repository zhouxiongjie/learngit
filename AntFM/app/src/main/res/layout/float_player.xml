<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:background="@drawable/float_player_bg">

    <com.shuangling.software.customview.ProgressCircleImageView
        android:id="@+id/progressImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_user2"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/red"
        app:civ_border_overlay="false"

        />

    <LinearLayout
        android:id="@+id/controllerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@color/divideColorTwo"/>
        <ImageView
            android:id="@+id/play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/float_play_icon"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/divideColorTwo"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/float_next_icon"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/divideColorTwo"/>
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/float_close_icon"/>

    </LinearLayout>



</LinearLayout>

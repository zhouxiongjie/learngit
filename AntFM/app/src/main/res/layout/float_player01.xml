<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <com.shuangling.software.customview.SolveClickTouchConflictLayout
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/float_player_bg"
        android:elevation="2dp"
        android:orientation="horizontal">

        <com.shuangling.software.customview.ProgressCircleImageView
            android:id="@+id/progressImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_user2"
            app:civ_border_color="@color/red"
            app:civ_border_overlay="false"
            app:civ_border_width="2dp"

            />

        <LinearLayout
            android:id="@+id/controllerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@color/divideColorTwo" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:src="@drawable/float_play_icon" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/divideColorTwo" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:src="@drawable/float_next_icon" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/divideColorTwo" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@drawable/float_close_icon" />

        </LinearLayout>


    </com.shuangling.software.customview.SolveClickTouchConflictLayout>
</RelativeLayout>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        ptr:actualImageScaleType="fitXY"
        ptr:placeholderImage="@drawable/index_top_bg"
        ptr:placeholderImageScaleType="fitXY"
        ptr:failureImage="@drawable/index_top_bg"
        ptr:failureImageScaleType="fitXY"
        android:src="@drawable/index_top_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/ic_xia"
                android:drawablePadding="5dp"
                android:text="长沙"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_28px" />

            <TextView
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/city"
                android:text="|"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_28px" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/divide"
                android:text="16℃"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_28px" />

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/temperature"
                android:text="晴"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_28px" />


            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_box_bg"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="40dp"
                android:paddingBottom="8dp"
                android:text="请输入搜索内容"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_20px" />


        </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:srlEnableLoadMore="false">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ptr:srlClassicsSpinnerStyle="Translate"
                ptr:srlDrawableProgress="@drawable/smart_refresh_progress_logo"
                ptr:srlDrawableProgressSize="20dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.shuangling.software.customview.BannerView
                        android:id="@+id/bannerView"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@color/divideColorTwo" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/divideColorTwo"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="热门主播"
                                android:textColor="@color/textColorTwo"
                                android:textSize="@dimen/font_size_36px"
                                android:textStyle="bold"/>

                            <!--<TextView-->
                                <!--android:id="@+id/moreAnchors"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignParentEnd="true"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:drawableRight="@drawable/ic_right"-->
                                <!--android:drawablePadding="10dp"-->
                                <!--android:text="更多"-->
                                <!--android:textColor="@color/textColorSeven"-->
                                <!--android:textSize="@dimen/font_size_26px" />-->
                        </RelativeLayout>

                        <!--<com.shuangling.software.customview.MyGridView-->
                            <!--android:id="@+id/anchors"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:cacheColorHint="@android:color/transparent"-->
                            <!--android:gravity="center"-->
                            <!--android:horizontalSpacing="10dp"-->
                            <!--android:listSelector="@android:color/transparent"-->
                            <!--android:numColumns="4"-->
                            <!--android:stretchMode="columnWidth"-->
                            <!--android:verticalSpacing="10dp"-->
                            <!--android:layout_marginTop="10dp"-->
                            <!--android:layout_marginBottom="10dp"/>-->

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/divideColorTwo"
                            android:scrollbars="none">
                            <LinearLayout
                                android:id="@+id/anchorsLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" />

                        </HorizontalScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/serviceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@color/divideColorTwo" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:padding="10dp">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="生活服务"
                                android:textColor="@color/textColorTwo"
                                android:textSize="@dimen/font_size_36px"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/moreService"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:drawableRight="@drawable/ic_right"
                                android:drawablePadding="10dp"
                                android:text="更多"
                                android:textColor="@color/textColorSeven"
                                android:textSize="@dimen/font_size_26px" />
                        </RelativeLayout>

                        <com.shuangling.software.customview.MyGridView
                            android:id="@+id/service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cacheColorHint="@android:color/transparent"
                            android:gravity="center"
                            android:horizontalSpacing="10dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>


</RelativeLayout>




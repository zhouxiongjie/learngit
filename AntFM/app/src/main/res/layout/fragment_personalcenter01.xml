<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="30dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headBg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:actualImageScaleType="centerCrop"
            app:failureImage="?attr/themeColor"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="?attr/themeColor"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/white"
            app:roundingBorderWidth="0dp"
            app:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/ic_user4"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/ic_user4"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/white"
            app:roundingBorderWidth="0dp"
            app:viewAspectRatio="1" />

        <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/head"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今晚打老虎"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_36px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attentionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注 25"
                    android:textColor="#696969"
                    android:textSize="@dimen/font_size_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="|"
                    android:textColor="#696969"
                    android:textSize="@dimen/font_size_24px" />

                <TextView
                    android:id="@+id/subscribeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订阅 10"
                    android:textColor="#696969"
                    android:textSize="@dimen/font_size_24px" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/head"
            android:text="点击登录"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_30px"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_right" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorOne" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="常用功能"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_30px" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divideColorTwo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe737;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="消息" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe75b;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="历史" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe73d;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="收藏" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/brokeNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe674;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="报料" />

        </LinearLayout>





    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divideColorTwo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/myPublish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe743;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="我的发布" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/award"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe76c;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="奖品" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/wallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe76f;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="钱包" />

        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorOne" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="更多功能"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_30px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divideColorTwo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe75d;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="意见反馈" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe75c;"
                android:textColor="#181818"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_26px"
                android:layout_marginTop="10dp"
                android:text="设置" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#DCDCDC"
            android:textSize="@dimen/font_size_22px"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="本平台由湖南双菱电子科技有限公司提供技术支持"/>

    </RelativeLayout>

</LinearLayout>

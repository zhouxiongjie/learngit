<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:qmui_skin_background="?attr/app_skin_common_background"
    android:orientation="vertical">
    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.shuangling.software.customview.FontIconView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="&#xe792;"
            android:textColor="#303030"
            android:textSize="@dimen/font_size_36px" />

        <com.shuangling.software.customview.FontIconView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="&#xe75c;"
            android:textColor="#181818"
            android:textSize="@dimen/font_size_36px" />
    </RelativeLayout>



    <FrameLayout
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:id="@+id/noLoginLayout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:failureImage="?attr/themeColor"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="?attr/themeColor"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="0dp"
                app:viewAspectRatio="1" />
            <TextView

                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="登录"
                android:textSize="@dimen/font_size_32px"
                android:gravity="center"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loginLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/ic_user4"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@drawable/ic_user4"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="0dp"
                app:viewAspectRatio="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/head"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今晚打老虎"
                    android:textColor="#060709"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_38px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/attentionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#202123"
                        android:textSize="@dimen/font_size_36px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="关注"
                        android:textColor="#7C7F85"
                        android:textSize="@dimen/font_size_26px" />


                    <TextView
                        android:id="@+id/subscribeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="0"
                        android:textColor="#202123"
                        android:textSize="@dimen/font_size_36px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="订阅"
                        android:textColor="#7C7F85"
                        android:textSize="@dimen/font_size_26px" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_right" />
        </RelativeLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/personal_center_area_bg"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe737;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030407"
                app:qmui_skin_text_color="?attr/app_skin_attribute_color"
                android:textSize="@dimen/font_size_24px"
                android:layout_marginTop="15dp"
                android:text="消息通知" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe73d;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030407"
                android:textSize="@dimen/font_size_24px"
                android:layout_marginTop="15dp"
                android:text="我的收藏" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe75b;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030407"
                android:textSize="@dimen/font_size_24px"
                android:layout_marginTop="15dp"
                android:text="浏览历史" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/brokeNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe613;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="报料"
                android:textColor="#030407"
                android:textSize="@dimen/font_size_26px" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/personal_center_area_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"
            android:text="其他服务"
            android:textStyle="bold"
            android:textColor="#202123"
            android:textSize="@dimen/font_size_34px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_center_area_bg"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/myPublish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe743;"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212224"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_marginTop="15dp"
                    android:text="我的发布" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/award"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe76c;"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212224"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_marginTop="15dp"
                    android:text="我的奖品" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/wallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe76f;"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212224"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_marginTop="15dp"
                    android:text="钱包" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe75d;"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212224"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_marginTop="15dp"
                    android:text="意见反馈" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personal_center_area_bg"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/aboutUs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe745;"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212224"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_marginTop="15dp"
                    android:text="关于我们" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/darkModel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">


                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/darkModelIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe76a;"
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_36px" />

                <TextView
                    android:id="@+id/darkModelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212224"
                    android:textSize="@dimen/font_size_24px"
                    android:layout_marginTop="15dp"
                    android:text="黑夜模式" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#DCDCDC"
            android:textSize="@dimen/font_size_22px"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="本平台由湖南双菱电子科技有限公司提供技术支持"/>

    </RelativeLayout>

</LinearLayout>

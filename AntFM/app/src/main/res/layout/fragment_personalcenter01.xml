<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:qmui_skin_background="?attr/app_skin_personal_center_background01">

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.shuangling.software.customview.FontIconView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="&#xe792;"
            android:textSize="@dimen/font_size_42px"
            app:qmui_skin_text_color="?attr/app_skin_title_color" />


        <com.shuangling.software.customview.FontIconView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="&#xe75c;"
            android:textSize="@dimen/font_size_42px"
            app:qmui_skin_text_color="?attr/app_skin_title_color" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/userLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:id="@+id/noLoginLayout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:failureImage="?attr/themeColor"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="?attr/themeColor"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="0dp"
                app:viewAspectRatio="1" />

            <TextView

                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_32px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loginLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/ic_user4"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@drawable/ic_user4"
                app:placeholderImageScaleType="centerCrop"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/white"
                app:roundingBorderWidth="0dp"
                app:viewAspectRatio="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/head"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今晚打老虎"
                    android:textSize="@dimen/font_size_38px"
                    android:textStyle="bold"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/attentionLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/attentionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/font_size_36px"
                        app:qmui_skin_text_color="?attr/app_skin_more_btn_color" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="关注"

                        android:textColor="#7C7F85"
                        android:textSize="@dimen/font_size_26px" />
                        >
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/subscribeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subscribeNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="0"
                            android:textColor="#202123"
                            android:textSize="@dimen/font_size_40px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="订阅"
                            android:textColor="#7C7F85"
                            android:textSize="@dimen/font_size_26px" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_right" />
        </RelativeLayout>

    </FrameLayout>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/roundLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:qmui_radius="10dp">

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe737;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="消息通知"
                android:textSize="@dimen/font_size_28px"
                app:qmui_skin_text_color="?attr/app_skin_title_color" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe73d;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:text="我的收藏"
                android:textSize="@dimen/font_size_28px"
                app:qmui_skin_text_color="?attr/app_skin_title_color" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe75b;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:text="浏览历史"
                android:textSize="@dimen/font_size_28px"
                app:qmui_skin_text_color="?attr/app_skin_title_color" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/brokeNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="&#xe613;"
                android:textColor="?attr/themeColor"
                android:textSize="@dimen/font_size_40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="报料"
                android:textSize="@dimen/font_size_28px"
                app:qmui_skin_text_color="?attr/app_skin_title_color" />

        </LinearLayout>


    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/roundLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:orientation="vertical"

        app:qmui_radius="10dp">
<!--        app:qmui_backgroundColor="?attr/app_skin_common_background01"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"
            android:text="其他服务"
            android:textSize="@dimen/font_size_34px"
            android:textStyle="bold"
            app:qmui_skin_text_color="?attr/app_skin_title_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/myPublish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:orientation="vertical">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe743;"

                    android:textSize="@dimen/font_size_40px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:text="我的发布"
                    android:textSize="@dimen/font_size_28px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/award"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:orientation="vertical">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe76c;"
                    android:textSize="@dimen/font_size_40px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:text="我的奖品"
                    android:textSize="@dimen/font_size_28px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/wallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe76f;"

                    android:textSize="@dimen/font_size_40px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="钱包"
                    android:textSize="@dimen/font_size_28px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:orientation="vertical">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe75d;"

                    android:textSize="@dimen/font_size_40px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="意见反馈"
                    android:textSize="@dimen/font_size_28px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/aboutUs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <com.shuangling.software.customview.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe745;"

                    android:textSize="@dimen/font_size_40px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="关于我们"
                    android:textSize="@dimen/font_size_28px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/darkModel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="visible">


                <com.shuangling.software.customview.FontIconView
                    android:id="@+id/darkModelIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="&#xe76a;"
                    android:textSize="@dimen/font_size_40px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

                <TextView
                    android:id="@+id/darkModelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="黑夜模式"
                    android:textSize="@dimen/font_size_28px"
                    app:qmui_skin_text_color="?attr/app_skin_title_color" />

            </LinearLayout>
        </LinearLayout>


    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="本平台由湖南双菱电子科技有限公司提供技术支持"
            android:textSize="@dimen/font_size_22px"
            app:qmui_skin_text_color="?attr/app_skin_more_btn_color" />

    </RelativeLayout>

</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/themeColor"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/weatherLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_xia"
                    android:drawablePadding="5dp"
                    android:text="湘西土家族苗族自治州"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28px"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="4"/>

                <TextView
                    android:id="@+id/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/city"
                    android:text="|"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28px" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/divide"
                    tools:text="16℃"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28px" />

                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/temperature"
                    tools:text="晴"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28px" />

            </RelativeLayout>

            <TextView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/weatherLayout"
                android:background="@drawable/search_box_bg"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="10dp"

                android:padding="10dp"
                android:text="请输入搜索内容"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_24px" />
        </RelativeLayout>






        <HorizontalScrollView
            android:id="@+id/columnScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


            <LinearLayout
                android:id="@+id/columnContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>


    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar" />


</RelativeLayout>

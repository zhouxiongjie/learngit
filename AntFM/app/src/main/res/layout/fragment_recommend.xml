<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:qmui_skin_background="?attr/app_skin_common_background"
    android:clipChildren="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/topBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/b"
                android:layout_alignParentTop="true"
                app:actualImageScaleType="fitXY"
                app:placeholderImage="@drawable/index_top_bg"
                app:placeholderImageScaleType="fitXY" />

            <View
                android:id="@+id/statusBar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RelativeLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusBar"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/weatherLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/ic_xia"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_28px"
                            tools:text="湘西土家族苗族自治州" />

                        <TextView
                            android:id="@+id/divide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/city"
                            android:text="|"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_28px" />

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/divide"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_28px"
                            tools:text="16℃" />

                        <TextView
                            android:id="@+id/weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/temperature"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_28px"
                            tools:text="晴" />

                    </RelativeLayout>


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/logo1"
                        android:layout_width="160dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/frameLayout"
                        android:layout_alignStart="@+id/frameLayout"
                        android:layout_alignParentLeft="true"
                        android:visibility="visible"
                        app:actualImageScaleType="fitStart"
                        app:failureImageScaleType="fitStart"
                        app:placeholderImageScaleType="fitStart"
                        app:roundingBorderColor="@color/white"
                        app:roundingBorderWidth="0dp" />
                </FrameLayout>


                <TextView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/frameLayout"
                    android:background="@drawable/search_box_bg"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="8dp"
                    android:text="请输入搜索内容"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/font_size_24px" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a">
                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toLeftOf="@+id/customColumn"-->
                <!--android:layout_centerVertical="true">-->
                <!--<HorizontalScrollView-->
                <!--android:id="@+id/columnScrollView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:scrollbars="none">-->
                <!--<LinearLayout-->
                <!--android:id="@+id/columnContent"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center_vertical"/>-->
                <!--</HorizontalScrollView>-->

                <!--<ImageView-->
                <!--android:id="@+id/indicator"-->
                <!--android:layout_width="4dp"-->
                <!--android:layout_height="4dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="2dp"-->
                <!--android:layout_below="@+id/columnScrollView"-->
                <!--android:background="@drawable/indicator_line_bg"/>-->

                <!--</RelativeLayout>-->

                <com.shuangling.software.customview.CustomPagerIndicator
                    android:id="@+id/pagerIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/customColumn"
                    app:indicatorLineEndColor="@color/white"
                    app:indicatorLineHeight="4dp"
                    app:indicatorLineMarginBottom="2dp"
                    app:indicatorLineMarginTop="2dp"
                    app:indicatorLineRadius="2dp"
                    app:indicatorLineScrollMode="dynamic"
                    app:indicatorLineStartColor="@color/white"
                    app:indicatorLineWidth="4dp"
                    app:isTabNormalTextBold="true"
                    app:isTabSelectedTextBold="true"
                    app:pagerIndicatorMode="scrollable"
                    app:tabNormalTextColor="@color/white"
                    app:tabNormalTextSize="@dimen/font_size_30px"
                    app:tabSelectedTextColor="@color/white"
                    app:tabSelectedTextSize="@dimen/font_size_44px"
                    app:tabTextColorMode="gradient" />

                <FrameLayout
                    android:id="@+id/customColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/custom_column" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/newColumn"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_gravity="right|top"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:visibility="invisible"
                        app:actualImageScaleType="centerCrop"
                        app:failureImage="@color/red"
                        app:failureImageScaleType="centerCrop"
                        app:placeholderImage="@color/red"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundAsCircle="true"
                        app:roundingBorderColor="@color/textColorSeven"
                        app:roundingBorderWidth="0dp" />

                </FrameLayout>


            </RelativeLayout>


        </RelativeLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topBar" />


    </RelativeLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>



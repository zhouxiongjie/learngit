<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        fresco:qmui_skin_background="?attr/app_skin_divider_6dp_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerInside" />

        <TextView
            android:id="@+id/column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logo"

            android:text="热门主播"
            fresco:qmui_skin_text_color="?attr/app_skin_title_color"
            android:textSize="@dimen/font_size_36px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_right"
            android:drawablePadding="10dp"
            android:text="更多"
            fresco:qmui_skin_text_color="?attr/app_skin_more_btn_color"
            android:textSize="@dimen/font_size_26px" />
    </RelativeLayout>


    <com.shuangling.software.customview.MyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>







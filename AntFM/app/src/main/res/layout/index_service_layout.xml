<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divideColorTwo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerInside"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/serviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/logo"
            android:layout_centerVertical="true"
            android:text="生活服务"
            fresco:qmui_skin_text_color="?attr/app_skin_title_color"
            android:textSize="@dimen/font_size_36px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moreService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_right"
            android:drawablePadding="10dp"
            android:text="更多"
            fresco:qmui_skin_text_color="?attr/app_skin_more_btn_color"
            android:textSize="@dimen/font_size_26px" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:background="#F6F8FA">

        <LinearLayout
            android:id="@+id/servicesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </HorizontalScrollView>

</LinearLayout>

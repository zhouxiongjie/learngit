<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/excellent"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/excellent_recommend"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_36px"
        android:textStyle="bold"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="@dimen/article_right_image_width"
            fresco:viewAspectRatio="1.5"
            android:layout_height="wrap_content"
            fresco:placeholderImage="@color/light_skeleton_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            fresco:roundedCornerRadius="4dp"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:actualImageScaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/logo"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_size_34px"
                android:background="@color/light_skeleton_color"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="@dimen/font_size_34px"
                android:layout_marginTop="10dp"
                android:background="@color/light_skeleton_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_size_34px"
                android:layout_marginTop="10dp"
                android:background="@color/light_skeleton_color"/>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>




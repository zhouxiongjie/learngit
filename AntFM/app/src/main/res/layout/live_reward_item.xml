    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/ic_user3"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:failureImage="@drawable/ic_user3"
        fresco:failureImageScaleType="centerCrop"
        fresco:viewAspectRatio="1"
        fresco:roundAsCircle="true"
        fresco:roundingBorderWidth="0dp"
        fresco:roundingBorderColor="@color/white"/>

    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/font_size_30px"
        android:textColor="#161823"
        android:text="流动的忧郁"
        android:lines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/money"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/font_size_26px"
        android:textColor="#EB4B29"
        android:text="iPhone 12"
        android:lines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true"/>


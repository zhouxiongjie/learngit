<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        fresco:roundedCornerRadius="4dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/article_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:viewAspectRatio="1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logo"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/headset_icon"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_24px"
        tools:text="36万"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/logo"
        android:layout_toStartOf="@+id/play"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.0"
            android:maxLines="1"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/font_size_30px"
            android:textStyle="bold"
            tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">



            <com.shuangling.software.customview.FontIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="&#xe611;"
                android:textColor="@color/main_bottom_text_selector"
                android:textSize="@dimen/font_size_30px"/>

            <TextView
                android:id="@+id/program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.0"
                android:lines="1"
                android:textColor="@color/textColorThree"
                android:textSize="@dimen/font_size_22px"
                android:text="正在直播"/>



        </LinearLayout>


        <TextView
            android:id="@+id/organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_organization1"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:layout_centerVertical="true"
            android:lineSpacingMultiplier="1.0"
            android:lines="1"
            android:textColor="@color/textColorNine"
            android:textSize="@dimen/font_size_26px"
            android:layout_marginTop="10dp"
            android:text="浏阳人民广播电台"
            />


    </LinearLayout>

    <com.shuangling.software.customview.FontIconView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="&#xe607;"
        android:textColor="#d9d9d9"
        android:textSize="30dp"/>


</RelativeLayout>




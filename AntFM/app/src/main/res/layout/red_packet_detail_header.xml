<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_packet_detail_header"
        android:orientation="vertical">
        <View
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/red_packet_default_head"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/red_packet_default_head"
            app:placeholderImageScaleType="centerCrop"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/white"
            app:roundingBorderWidth="0dp"
            app:viewAspectRatio="1" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="灵动直播"
            android:textColor="#FFEAB7"
            android:textSize="@dimen/font_size_30px" />

        <!--<TextView-->
        <!--android:id="@+id/note"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="给你发来一个红包"-->
        <!--android:textSize="@dimen/font_size_28px"-->
        <!--android:textColor="#7fffffff"-->
        <!--/>-->


        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="恭喜发财，大吉大利"
            android:textColor="#C1FFEAB6"
            android:textSize="@dimen/font_size_28px" />


        <LinearLayout
            android:id="@+id/moneyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.50"
                android:textColor="#FFEAB6"
                android:textSize="@dimen/font_size_100px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#FFEAB6"
                android:textSize="@dimen/font_size_60px" />


        </LinearLayout>


        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="已存入钱包，可提现至微信或支付宝 〉"
            android:textColor="#FFEAB6"
            android:textSize="@dimen/font_size_24px" />


    </LinearLayout>


    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#666666"
        android:textSize="@dimen/font_size_28px"
        tools:text="10个红包，29秒被抢光" />

</LinearLayout>









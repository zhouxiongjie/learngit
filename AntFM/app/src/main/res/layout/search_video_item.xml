<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">



        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/logo"
            android:layout_width="70dp"
            fresco:viewAspectRatio="1"
            android:layout_height="wrap_content"
            fresco:placeholderImage="@drawable/article_placeholder"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            fresco:roundedCornerRadius="4dp"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:actualImageScaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/logo"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorTwo"
                android:textSize="@dimen/font_size_34px"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.0"
                android:lines="1"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                tools:text="资讯文章内容中只有2张图片以下的，按左图右文的方式显示（左图为封面图）"/>


            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.0"
                android:lines="1"
                android:textColor="@color/textColorThree"
                android:textSize="@dimen/font_size_24px"
                tools:text="24:00"
                android:drawableStart="@drawable/ic_timing"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"/>

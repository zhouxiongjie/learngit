<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/search_record_bg">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/head_placeholder"
        app:placeholderImageScaleType="centerCrop"
        app:failureImage="@drawable/head_placeholder"
        app:failureImageScaleType="centerCrop"
        app:viewAspectRatio="1"
        app:roundAsCircle="true"
        app:roundingBorderWidth="0dp"
        app:roundingBorderColor="@color/white"
        android:visibility="visible"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/textColorTwo"
        android:textSize="@dimen/font_size_26px"
        android:text="音悦台"/>

</LinearLayout>

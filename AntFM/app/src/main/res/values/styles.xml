<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

    </style>

    <!--主题蓝-->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeBlue</item>
        <item name="colorPrimaryDark">@color/themeBlue</item>
        <item name="colorAccent">@color/themeBlue</item>
        <!--<item name="android:navigationBarColor">@color/themeBlue</item>-->
        <item name="themeColor">@color/themeBlue</item>
        <item name="translucentThemeColor">@color/translucentThemeBlue</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!--主题紫-->
    <style name="AppThemePurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/themePurple</item>
        <item name="colorPrimaryDark">@color/themePurple</item>
        <item name="colorAccent">@color/themePurple</item>
        <!--<item name="android:navigationBarColor">@color/themePurple</item>-->
        <item name="themeColor">@color/themePurple</item>
        <item name="translucentThemeColor">@color/translucentThemePurple</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!--主题红-->
    <style name="AppThemeRed" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeRed</item>
        <item name="colorPrimaryDark">@color/themeRed</item>
        <item name="colorAccent">@color/themeRed</item>
        <!--<item name="android:navigationBarColor">@color/themeRed</item>-->
        <item name="themeColor">@color/themeRed</item>
        <item name="translucentThemeColor">@color/translucentThemeRed</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!--主题绿-->
    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeGreen</item>
        <item name="colorPrimaryDark">@color/themeGreen</item>
        <item name="colorAccent">@color/themeGreen</item>
        <!--<item name="android:navigationBarColor">@color/themeGreen</item>-->
        <item name="themeColor">@color/themeGreen</item>
        <item name="translucentThemeColor">@color/translucentThemeGreen</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!--主题橙-->
    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeOrange</item>
        <item name="colorPrimaryDark">@color/themeOrange</item>
        <item name="colorAccent">@color/themeOrange</item>
        <!--<item name="android:navigationBarColor">@color/themeOrange</item>-->
        <item name="themeColor">@color/themeOrange</item>
        <item name="translucentThemeColor">@color/translucentThemeOrange</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>



    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>


    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="tabIndicatorColor">?attr/themeColor</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabSelectedTextColor">?attr/themeColor</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>


    <style name="CheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_selector</item>
    </style>

    <style name="WebViewProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Comment_Dialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <style name="SheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>
    <!--自定义bottomdialog的style-->
    <style name="TransparentBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetStyle</item>
    </style>

    <!-- 自定义用于去除Dialog背景-->
    <style name="CustomTipDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 去除边框-->
        <item name="android:windowIsFloating">true</item><!-- 浮现在Activity之上-->
        <item name="android:windowIsTranslucent">true</item><!-- 窗口不透明-->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题-->
        <item name="android:background">@android:color/transparent</item><!-- 背景颜色透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!-- Dialog以外区域模糊-->

    </style>



    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_smile_face</item>
    </style>

    <style name="CustomCheckboxTheme1" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_collect_uncollect</item>
    </style>

    <style name="CustomCheckboxTheme2" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_like</item>
    </style>

    <style name="CustomCheckboxTheme3" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_like2</item>
    </style>

    <style name="CustomCheckboxTheme4" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_choose</item>
    </style>

    <style name="CustomCheckboxTheme5" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_like3</item>
    </style>

</resources>

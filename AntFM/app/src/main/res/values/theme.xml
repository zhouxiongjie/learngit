    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- normal skin -->
    <style name="app_skin_normal" parent="BaseAppTheme" >
        <item name="app_skin_common_background">@color/app_skin_common_background_light</item>
    </style>

    <!-- dark skin -->
    <style name="app_skin_dark" parent="BaseAppTheme">
        <item name="app_skin_common_background">@color/app_skin_common_background_dark</item>
    </style>


    <!--主题蓝-->
    <style name="AppThemeBlue" parent="app_skin_normal">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeBlue</item>
        <item name="colorPrimaryDark">@color/themeBlue</item>
        <item name="colorAccent">@color/themeBlue</item>
        <!--<item name="android:navigationBarColor">@color/themeBlue</item>-->
        <item name="themeColor">@color/themeBlue</item>
        <item name="translucentThemeColor">@color/translucentThemeBlue</item>

    </style>

    <!--夜间模式主题蓝-->
    <style name="AppThemeDarkBlue" parent="app_skin_dark">
